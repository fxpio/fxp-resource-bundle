<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_resource.converter_registry.class">Sonatra\Bundle\ResourceBundle\Converter\ConverterRegistry</parameter>
        <parameter key="sonatra_resource.converter.json.class">Sonatra\Bundle\ResourceBundle\Converter\JsonConverter</parameter>
    </parameters>

    <services>
        <!-- Converter Registry -->
        <service id="sonatra_resource.converter_registry" class="%sonatra_resource.converter_registry.class%">
            <argument type="collection" />
        </service>

        <!-- Json Converter -->
        <service id="sonatra_resource.converter.json" class="%sonatra_resource.converter.json.class%">
            <tag name="sonatra_resource.converter" />
        </service>
    </services>
</container>
