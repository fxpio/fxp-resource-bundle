<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Converter Registry -->
        <service id="fxp_resource.converter_registry" class="Fxp\Component\Resource\Converter\ConverterRegistry" public="true">
            <argument type="collection" />
        </service>

        <service id="Fxp\Component\Resource\Converter\ConverterRegistry" alias="fxp_resource.converter_registry" />
        <service id="Fxp\Component\Resource\Converter\ConverterRegistryInterface" alias="fxp_resource.converter_registry" />

        <!-- Json Converter -->
        <service id="fxp_resource.converter.json" class="Fxp\Component\Resource\Converter\JsonConverter">
            <tag name="fxp_resource.converter" />
            <argument type="service" id="translator" />
        </service>
    </services>
</container>
