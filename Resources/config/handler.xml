<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_resource.form_handler.class">Sonatra\Component\Resource\Handler\FormHandler</parameter>
    </parameters>

    <services>
        <!-- Form Handler -->
        <service id="sonatra_resource.form_handler" class="%sonatra_resource.form_handler.class%">
            <argument type="service" id="sonatra_resource.converter_registry" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="request_stack" />
            <argument>%sonatra_resource.form_handler_default_limit%</argument>
        </service>
    </services>
</container>
