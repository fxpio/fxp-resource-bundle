<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Domain Factory -->
        <service id="sonatra_resource.domain_factory" class="Sonatra\Component\Resource\Domain\DomainFactory" public="false">
            <argument type="service" id="doctrine" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="sonatra_default_value.factory" />
            <argument type="service" id="validator" />
            <argument type="service" id="translator" />
            <argument>%sonatra_resource.domain.undelete_disable_filters%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <!-- Domain Manager -->
        <service id="sonatra_resource.domain_manager" class="Sonatra\Component\Resource\Domain\DomainManager" public="true">
            <argument type="collection" />
            <argument type="service" id="sonatra_resource.domain_factory" />
        </service>
    </services>
</container>
